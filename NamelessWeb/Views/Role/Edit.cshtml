@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2 style="color:aliceblue">Edit Role</h2>

<button class="btn" style="padding-right:20px; color:aliceblue;">
    @Html.ActionLink("List Roles", "Index")</button> | <button class="btn" style="padding-right:20px;">
    @Html.ActionLink("Manage User Role", "ManageUserRoles")</button>
    <hr />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)
        <div style="color:aliceblue">
            Role name
        </div>
        <p>
            @Html.TextBoxFor(model => model.Name)
        </p>
        <input type="submit" value="Save" />
    }

