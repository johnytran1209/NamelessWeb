@model NamelessWeb.Models.ForgotViewModel
@{
    ViewBag.Title = "Forgot";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="card">
        <div class="container-fliud">
            <div class="container body-content">
                <h2>Forgot Password</h2>

                <hr />


                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Question, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Question, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Answer, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Answer, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @using (Html.BeginForm("Forgot", "Account", FormMethod.Post, new { @class = "col-md-2 control-label" }))
                    {


                        <input type="submit" class="btn btn-default" value="Confirm" />


                    }
                    <div class="col-md-10">
                        @using (Html.BeginForm("GetEmail", "Account", FormMethod.Post))
                        {

                            <input type="submit" class="btn btn-default" value="Get Question" />


                        }
                    </div>
                    </div>
                </div>

        </div>
    </div>
</div>
