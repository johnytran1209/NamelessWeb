@model NamelessWeb.Models.Guitar.Wood.GoTop
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style = "color:aliceblue">New Top</h2>
<body>
@using (Html.BeginForm("NewTop", "NewTypes", FormMethod.Post, new { @class = "form-horizontal", role = "form", @style = "color:aliceblue" }))
{
    <div class="form-group">
        <div style="left: auto" , class="form-group">
            @Html.Label("Top Id:")
            @Html.TextBoxFor(m => m.TopId, new { @class = "form-control" })
        </div>
        <div style="left: auto" , class="form-group">
            @Html.Label("Top:")
            @Html.TextBoxFor(m => m.TopName, new {@class = "form-control"})
        </div>
        <button type="submit" value="Save" class="btn btn-primary">Save</button>
    </div>
}
</body>

