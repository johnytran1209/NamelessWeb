@model NamelessWeb.Models.Guitar.Wood.GoBack
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style = "color:aliceblue">New Back</h2>
<body>
@using (Html.BeginForm("NewBack", "NewTypes", FormMethod.Post, new { @class = "form-horizontal", role = "form", @style = "color:aliceblue" }))
{
    <div class="form-group">
        <div style="left: auto" , class="form-group">
            @Html.Label("Back Id:", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(m => m.BackId, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.BackId, "", new { @class = "text-danger" })
        </div>
        <div style="left: auto" , class="form-group">
            @Html.Label("Back:", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(m => m.BackName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.BackName, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-offset-2 col-md-10">
            <button class="btn" style="padding-right:20px;">
                @Html.ActionLink("Back", "Create", "Guitar")
            </button>
            <button type="submit" value="Save" class="btn btn-primary">Save</button>

        </div>
    </div>
}
</body>
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval") ;
}
