<div class="container">
    <div class="card">
        <div class="container-fliud">
            <div class="container body-content">
                <h2>Bill Editor</h2>
                @using (Html.BeginForm("WListEdit", "Export"))
                {
                    @Html.AntiForgeryToken()
                    <table class="table" height="120">
                        <tr>
                            <th width="20%">
                                Product
                            </th>
                            <th width="10%">
                                Bill no.
                            </th>
                            <th width="30%">
                                Customer Information
                            </th>

                            <th width="20%">
                                Employee Information
                            </th>
                            <th width="10%">

