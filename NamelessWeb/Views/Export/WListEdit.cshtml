@model NamelessWeb.Views.ViewModels.ExportViewModel
@{
    ViewBag.Title = "Wlist";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<style>
    textarea {
        width: 350px;
        height:200px;
    }
</style>
<script type="text/javascript">
    $(function () {
        $("form").submit(function (e) {

