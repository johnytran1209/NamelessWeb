                        </tr>

                        <tr>
                            <td>

                                @if (Model.ImageLink != "")
                {
                                    <img src="@Model.ImageLink" style="max-height: 100px" />
                                }

                            </td>
                            <td>
                                <div>bill No.: @Model.Bid</div>
                                <div>
                                    @Model.Product
                                </div>
                                <div>
                                    @Model.Cost
                                </div>
                            </td>
                            <td>
                                @Model.CusName
                                <br />
                                <div>
                                    @Html.TextAreaFor(model => model.BillDes, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                                <br />
                                @Model.BillDate

                            </td>
                            <td>
                                @Model.EmployeeName
                                <br />
                                @Model.EmployeephoneNo
                            </td>
                            <td>
                                <input type="submit" id="emailSubmit" value="Submit change" />
